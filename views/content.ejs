<h1>content</h1>

<%if(locals.user){%>
<form action="/posts" method="post">
  <textarea name="content" id="" cols="30" rows="3"></textarea>
  <input type="submit" value="POST" />
</form>
<%}%>

<ul>
  <% for(post of posts){%>

  <li><%=post.content%></li>
  

  <small><%=post.user.name%></small>
  <br>
  <small><a href="/posts/<%=post.id%>">Delete</a></small>
  <%if(locals.user){%>
  <form action="/comment" method="POST">
    <input type="text" name="text" placeholder="Type the comment" />
    <input type="hidden" name="post" value="<%=post.id%>">
    <input type="submit" value="ADD COMMENT" />
  </form>
  <%}%>
 
  <ul>
  <% for(cmt of post.comment){%>
    <li><%=cmt.content%></li>
    <br>
    <small><a href="/comment/<%=cmt.id%>">Delete</a></small>
  <%}%> 
  </ul>
  <%}%> 
</ul>
 

